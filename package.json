  "engines": {
    "node": ">=18.0"
  },
  "keywords": [
    "stream",
    "monitor",
    "notifier",
    "twitch notifier",
    "youtube notifier",
    "live"
  ],
  "bugs": {
    "url": "https://github.com/zaacksb/flow-monitor/issues"
  },
  "homepage": "https://github.com/zaacksb/flow-monitor#readme",
